pipeline {
    agent any

    stages {
        stage('Build Docker Images') {
            steps {
                echo 'ðŸ”¨ Building Docker images...'
                sh 'docker build -t order-service ./order-service'
                sh 'docker build -t payment-service ./payment-service'
            }
        }

        stage('Stop Old Containers') {
            steps {
                echo 'ðŸ§¹ Stopping old containers...'
                sh 'docker rm -f order-service || true'
                sh 'docker rm -f payment-service || true'
            }
        }

        stage('Run New Containers') {
            steps {
                echo 'ðŸš€ Running containers...'
                sh 'docker run -d -p 8001:80 --name order-service order-service'
                sh 'docker run -d -p 8002:80 --name payment-service payment-service'
            }
        }
    }
}
